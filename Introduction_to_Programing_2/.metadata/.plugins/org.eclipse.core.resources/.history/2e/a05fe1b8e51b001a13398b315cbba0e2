<script> 
$(document).ready(function(){                        
                             $("#h2_1").click(function(){
                                 $(this).hide(3000);
                               });
  $("#form1_div").dblclick(function(){
   // $(this).css("background-color","#ffffff");
    $(this).hide(2000);
  }); 
//When show button is clicked the table will be hidden or shown.
  $("#showb").click(function(){
            $("#h2_1").show(3000);
           });
                              
  $("#hideb").click(function(){
      $("#h2_1").hide(3000);
    });
});
</script>
</head>
